<viewdata model="FubuMovies.Web.Mapping.MovieNewModel" />
<content:title>
   Movies
</content:title>
<h1>Movies</h1>

<Form model="MovieViewModel">
  <div class="row">
    <LabelFor property="Name" />
    <InputFor property="Name" />
  </div>
  <div class="row">
    <LabelFor property="Description" />
    <InputFor property="Description" />
  </div>
  <div class="row row-submit">
    <button type="submit">
      <span>Add Movie</span>
    </button>
  </div>
</Form>